{
  "name": "htpc-hub",
  "version": "0.0.0",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"ng serve\" \"wait-on http://localhost:4200 && electron .\"",
    "build-angular": "ng build  --base-href ./",
    "build": "npm run build-angular",
    "dist": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.htpc.hub",
    "productName": "HTPC Hub",
    "mac": {
      "target": "dmg",
      "category": "public.app-category.entertainment"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@11.8.0",
  "dependencies": {
    "@angular/animations": "^21.1.4",
    "@angular/common": "^21.1.0",
    "@angular/compiler": "^21.1.0",
    "@angular/core": "^21.1.0",
    "@angular/forms": "^21.1.0",
    "@angular/platform-browser": "^21.1.0",
    "@angular/router": "^21.1.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^21.1.4",
    "@angular/cli": "^21.1.4",
    "@angular/compiler-cli": "^21.1.0",
    "concurrently": "^9.2.1",
    "electron": "^40.4.0",
    "electron-builder": "^26.7.0",
    "jsdom": "^27.1.0",
    "typescript": "~5.9.2",
    "vitest": "^4.0.8",
    "wait-on": "^9.0.4"
  }
}
